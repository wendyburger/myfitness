<div class="row">
  <div class='col-md-6 col-md-offset-3'>
  <p>
    <strong>標題</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>內容</strong>
    <%= @post.description %>
  </p>

  <p>
    <div class="panel-body col-md-6"><%= raw(@post.content_html) %></div>
  </p>

  <p>
    <%= image_tag @post.image.url(:original), class: "img-responsive" if @post.image.file? %>
  </p>
  </div>
</div>   
    
