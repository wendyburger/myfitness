<div class='row'>
  <div class='container'>
    <div class='col-md-4 col-md-offset-2'>
      <h3><%= image_tag @user.gravatar_url %></h3>
    </div>
  
    <div class='col-md-6'>
      <h3><%= @user.full_name %> profile</h3>
      <br>
      
      <ul class="nav nav-pills">
        <li class="active"><a data-toggle="pill" href="#home">我的食譜<span class="badge"><%= @user.recipes.count %></span></a></li>
        <li><a data-toggle="pill" href="#menu1">我的討鞭文<span class="badge"><%= @user.posts.count %></span></a></li>
      </ul>
      
      <hr>
      
      <div class="tab-content">
        <div id="home" class="tab-pane fade in active">
        <% @recipes.each do |recipe| %>
          <%= link_to recipe_path(recipe) do %>
            <%= image_tag recipe.image.url, size: "180" %>
          <% end %>
        <% end %>
        </div>

        <div id="menu1" class="tab-pane fade">
          <% @posts.each do |post| %>
            <h3><%= link_to "#{post.title}", post_path(post) %></h3>
            <small><%= post.description %></small>
            <hr>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>