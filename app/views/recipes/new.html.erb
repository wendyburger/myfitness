<div class='row'>
  <div class='container'>
    <h3 class='text-center'>
    新增食譜
    </h3>
    <div class='form-group'>
      <%= simple_form_for @recipe do |f| %>
        <%= f.input :dishname, label: "菜單名稱", placeholder: "dishname" %>
        <%= f.input :protocol, as: :text, :input_html => { :rows => 15 }, label: "作法", placeholder: "protocol" %>
        <%= f.input :image, label: "照片" %>
        </br>
        <%= f.submit (@recipe.new_record? ? "新增" : "更新"), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>